#include <stdio.h>

int verifica(int a) {
    if (a >= 0) {
        return 1;
    } else {
        return 0;
    }
}

int main() {
    int a;
    printf("fale um numero:\n");
    scanf("%d", &a);
    if (verifica(a)) {
        printf("o valor %d é positivo.\n", a);
    } else {
        printf("o valor %d é negativo.\n", a);
    }

    return 0;
}
